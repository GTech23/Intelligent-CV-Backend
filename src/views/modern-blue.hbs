<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{resume.personal.title}}</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; } body { font-family:
      -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu,
      Cantarell, sans-serif; line-height: 1.6; color: #333; background-color:
      #f8f9fa; padding: 2rem 1rem; } .resume-container { max-width: 900px;
      margin: 0 auto; background: white; box-shadow: 0 10px 30px rgba(0, 0, 0,
      0.1); border-radius: 12px; overflow: hidden; } /* Header Styles */ .header
      { background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white;
      padding: 3rem 2rem; } .header-content { display: flex; align-items:
      center; gap: 2rem; } .profile-image { width: 120px; height: 120px;
      border-radius: 50%; border: 4px solid white; object-fit: cover; display:
      none; } .profile-image.visible { display: block; } .header-text { flex: 1;
      } .full-name { font-size: 3rem; font-weight: 700; margin-bottom: 0.5rem;
      line-height: 1.1; } .title { font-size: 1.5rem; font-weight: 300;
      margin-bottom: 1.5rem; opacity: 0.9; } .contact-info { display: flex;
      flex-wrap: wrap; gap: 1.5rem; font-size: 0.9rem; } .contact-item {
      display: flex; align-items: center; gap: 0.5rem; opacity: 0.9; transition:
      opacity 0.3s ease; } .contact-item:hover { opacity: 1; cursor: pointer; }
      .contact-icon { width: 16px; height: 16px; fill: currentColor; } /* Main
      Content */ .main-content { padding: 2rem; } .section { margin-bottom:
      2.5rem; } .section-title { font-size: 1.5rem; font-weight: 700; color:
      #1f2937; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 3px
      solid #2563eb; position: relative; } .summary { font-size: 1rem;
      line-height: 1.7; color: #4b5563; } /* Experience & Education Items */
      .timeline-item { border-left: 4px solid #2563eb; padding-left: 1.5rem;
      margin-bottom: 2rem; position: relative; } .timeline-item::before {
      content: ''; position: absolute; left: -8px; top: 0; width: 12px; height:
      12px; background: #2563eb; border-radius: 50%; } .education-item {
      border-left-color: #059669; } .education-item::before { background:
      #059669; } .project-item { border-left-color: #7c3aed; }
      .project-item::before { background: #7c3aed; } .certification-item {
      border-left-color: #d97706; } .certification-item::before { background:
      #d97706; } .item-header { display: flex; justify-content: space-between;
      align-items: flex-start; margin-bottom: 0.5rem; flex-wrap: wrap; gap:
      1rem; } .item-title { font-size: 1.25rem; font-weight: 700; color:
      #1f2937; } .item-subtitle { font-size: 1.1rem; font-weight: 600; color:
      #2563eb; margin-bottom: 0.25rem; } .education-item .item-subtitle { color:
      #059669; } .project-item .item-subtitle { color: #7c3aed; }
      .certification-item .item-subtitle { color: #d97706; } .item-meta {
      text-align: right; color: #6b7280; font-weight: 500; } .item-meta .date {
      font-size: 0.95rem; } .item-meta .location { font-size: 0.85rem; }
      .item-description { color: #4b5563; margin-bottom: 1rem; line-height: 1.6;
      } .highlights { list-style: none; } .highlights li { position: relative;
      padding-left: 1.5rem; margin-bottom: 0.5rem; color: #4b5563; line-height:
      1.5; } .highlights li::before { content: '‚Ä¢'; position: absolute; left: 0;
      color: #2563eb; font-weight: bold; } /* Skills */ .skills-container {
      display: flex; flex-wrap: wrap; gap: 0.75rem; } .skill-tag { background:
      #dbeafe; color: #1d4ed8; padding: 0.5rem 1rem; border-radius: 25px;
      font-weight: 500; font-size: 0.9rem; transition: all 0.3s ease; }
      .skill-tag:hover { background: #bfdbfe; transform: translateY(-1px); } /*
      Languages */ .languages-grid { display: grid; grid-template-columns:
      repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; } .language-item {
      background: #f9fafb; padding: 1rem; border-radius: 8px; border: 1px solid
      #e5e7eb; } .language-name { font-weight: 700; color: #1f2937;
      margin-bottom: 0.25rem; } .language-level { color: #6b7280; font-size:
      0.9rem; } /* Project Links */ .project-link { color: #7c3aed;
      text-decoration: none; transition: color 0.3s ease; } .project-link:hover
      { color: #5b21b6; text-decoration: underline; } /* Responsive Design */
      @media (max-width: 768px) { body { padding: 1rem 0.5rem; } .header {
      padding: 2rem 1rem; } .header-content { flex-direction: column;
      text-align: center; } .full-name { font-size: 2.5rem; } .contact-info {
      justify-content: center; } .main-content { padding: 1.5rem 1rem; }
      .item-header { flex-direction: column; align-items: flex-start; }
      .item-meta { text-align: left; } .languages-grid { grid-template-columns:
      1fr; } } @media (max-width: 480px) { .full-name { font-size: 2rem; }
      .contact-info { flex-direction: column; gap: 0.75rem; } }
    </style>
  </head>
  <body>

    <div class="resume-container">
      <!-- Header Section -->
      <div class="header">
        <div class="header-content">
          {{#if resume.personal.profileImage}}
            <img
              src="{{resume.personal.profileImage}}"
              alt="Profile"
              class="profile-image visible"
            />
          {{/if}}
          <div class="header-text">
            <h1 class="full-name">{{resume.personal.fullName}}</h1>
            <h2 class="title">{{resume.personal.title}}</h2>
            <div class="contact-info">
              {{#if resume.personal.email}}
                <div class="contact-item">üìß {{resume.personal.email}}</div>
              {{/if}}
              {{#if resume.personal.phone}}
                <div class="contact-item">üìû {{resume.personal.phone}}</div>
              {{/if}}
              {{#if resume.personal.address}}
                <div class="contact-item">üìç {{resume.personal.address}}</div>
              {{/if}}
              {{#if resume.personal.linkedin}}
                <div class="contact-item">üîó {{resume.personal.linkedin}}</div>
              {{/if}}
              {{#if resume.personal.website}}
                <div class="contact-item">üåç {{resume.personal.website}}</div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <div class="main-content">
        <!-- Summary -->
        {{#if resume.personal.summary}}
          <section class="section">
            <h2 class="section-title">Professional Summary</h2>
            <p class="summary">{{resume.personal.summary}}</p>
          </section>
        {{/if}}

        <!-- Experience -->
        {{#if resume.experience.length}}
          <section class="section">
            <h2 class="section-title">Professional Experience</h2>
            {{#each resume.experience}}
              <div class="timeline-item">
                <div class="item-header">
                  <div>
                    <div class="item-title">{{position}}</div>
                    <div class="item-subtitle">{{company}}</div>
                  </div>
                  <div class="item-meta">
                    <span class="date">{{startDate}} - {{endDate}}</span><br />
                    <span class="location">{{location}}</span>
                  </div>
                </div>
                <p class="item-description">{{description}}</p>
                {{#if highlights.length}}
                  <ul class="highlights">
                    {{#each highlights}}
                      <li>{{this}}</li>
                    {{/each}}
                  </ul>
                {{/if}}
              </div>
            {{/each}}
          </section>
        {{/if}}

        <!-- Education -->
        {{#if resume.education.length}}
          <section class="section">
            <h2 class="section-title">Education</h2>
            {{#each resume.education}}
              <div class="timeline-item education-item">
                <div class="item-header">
                  <div>
                    <div class="item-title">{{degree}}</div>
                    <div class="item-subtitle">{{school}}</div>
                  </div>
                  <div class="item-meta">
                    <span class="date">{{startDate}} - {{endDate}}</span>
                  </div>
                </div>
                <p class="item-description">{{fieldOfStudy}}
                  ‚Äî
                  {{description}}</p>
              </div>
            {{/each}}
          </section>
        {{/if}}

        <!-- Skills -->
        {{#if resume.skills.length}}
          <section class="section">
            <h2 class="section-title">Skills</h2>
            <div class="skills-container">
              {{#each resume.skills}}
                <span class="skill-tag">{{this}}</span>
              {{/each}}
            </div>
          </section>
        {{/if}}

        <!-- Projects -->
        {{#if resume.projects.length}}
          <section class="section">
            <h2 class="section-title">Projects</h2>
            {{#each resume.projects}}
              <div class="timeline-item project-item">
                <div class="item-header">
                  <div>
                    <div class="item-title">{{name}}</div>
                    <div class="item-subtitle">
                      <a
                        href="{{link}}"
                        target="_blank"
                        class="project-link"
                      >{{link}}</a>
                    </div>
                  </div>
                </div>
                <p class="item-description">{{description}}</p>
              </div>
            {{/each}}
          </section>
        {{/if}}

        <!-- Certifications -->
        {{#if resume.certifications.length}}
          <section class="section">
            <h2 class="section-title">Certifications</h2>
            {{#each resume.certifications}}
              <div class="timeline-item certification-item">
                <div class="item-header">
                  <div class="item-title">{{name}}</div>
                  <div class="item-subtitle">{{issuer}}</div>
                  <div class="item-meta"><span
                      class="date"
                    >{{date}}</span></div>
                </div>
                <p class="item-description">{{description}}</p>
              </div>
            {{/each}}
          </section>
        {{/if}}

        <!-- Languages -->
        {{#if resume.languages.length}}
          <section class="section">
            <h2 class="section-title">Languages</h2>
            <div class="languages-grid">
              {{#each resume.languages}}
                <div class="language-item">
                  <div class="language-name">{{name}}</div>
                  <div class="language-level">{{level}}</div>
                </div>
              {{/each}}
            </div>
          </section>
        {{/if}}
      </div>
    </div>

  </body>
</html>